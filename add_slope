<html lang="en">
  <head>
    <meta charset="utf-8">
    <title> Altizure 2.1 Add project </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  </head>
  <body style="margin: 0px; padding: 0px;">
    <div id="page-content"></div>
    <script type="text/javascript" src="https://beta.altizure.cn/sdk"></script>
    <script>
      let options = {
        altizureApi:{
          key: 'App Key'
        },
        camera: {
          poseTo: { alt:1020,
            lng: 112.15, // this should be close to your added marker's position
            lat: 23.0167
          }
        },
        renderItems: {
          earth: true,
          earthUseTexture: true,
          featureInView: false,
          orbitRing: true
        }
      }

      let sandbox = new altizure.Sandbox('page-content', options)

      // add project: https://www.altizure.com/project/58428f1d97b73e0b090675cd/model
      // at the default GPS position
      // Note: your developer key must have access to the project, and the project must have valid GPS information.
      sandbox.add('AltizureProjectMarker', {pid: '5ab3a9dfd73c372dc68e0fd5'})

      
      let marker
      sandbox.add('AltizureProjectMarker', { // This is an async function. It resolves the marker
        pid: '5ab3a9dfd73c372dc68e0fd5',
        pose: {
          position: {lng: 112.15, lat: 23.0166, alt: 0} // with an arbitrary position (longitude, latitude, altitude)
        }
      })
        .then(function(m) {
          marker = m // get the marker
        })
    </script>
  </body>
</html>
